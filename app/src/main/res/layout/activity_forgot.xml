<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".authentication.Forgot">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <ImageView
        android:layout_width="300dp"
        android:id="@+id/logo"
        android:src="@drawable/alcher"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"/>
  <TextView
      android:layout_width="match_parent"
      android:text="SEND NEW PASSWORD TO MAIL"
      android:layout_above="@id/username"
      android:gravity="center"
      android:layout_margin="15dp"
      android:textSize="15sp"
      android:textStyle="bold"
      android:textColor="#FFC107"
      android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        app:hintTextColor="#ffffff"
        android:hint="Username"
        android:layout_centerInParent="true"
        android:id="@+id/username"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editTextUsername"
            android:paddingLeft="20dp"
            android:textColorHint="?colorPrimary"
            android:background="@drawable/shape"
            android:backgroundTint="#B0FFFFFF"
            android:textColor="?colorPrimary"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/view"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@id/username"
        android:layout_height="wrap_content">
        <View
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="OR"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:layout_height="1dp"/>

    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:hintTextColor="#ffffff"
        android:id="@+id/email"
        android:layout_below="@id/view"
        android:padding="8dp"
        android:hint="Email"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextEmail"
            android:paddingLeft="20dp"
            android:textColorHint="?colorPrimary"
            android:background="@drawable/shape"
            android:backgroundTint="#B0FFFFFF"
            android:textColor="#ffffff"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonForgot"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/email"
        android:background="@drawable/shape"
        android:backgroundTint="#FFC107"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonForgot"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Login here"
            android:textColor="#FFC107"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>