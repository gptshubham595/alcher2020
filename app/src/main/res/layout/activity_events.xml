<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/blur"
    android:layout_height="match_parent"
    tools:context=".Events">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandableTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:maxLines="1"
        android:background="@drawable/shape2"
        android:backgroundTint="#609D8BD6"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:padding="8dp"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:typeface="sans"
        android:ellipsize="end"
        app:animation_duration="750"/>
    <Button
        android:layout_width="100dp"
        android:text="REGISTER"
        android:backgroundTint="#A65A68C7"
        android:layout_margin="8dp"
        android:id="@+id/register1"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:layout_below="@id/expandableTextView1"
        android:layout_alignParentRight="true"
        android:layout_height="32dp"/>



    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandableTextView2"
        android:layout_below="@id/register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:maxLines="1"
        android:background="@drawable/shape2"
        android:backgroundTint="#609D8BD6"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:ellipsize="end"
        app:animation_duration="750"/>
    <Button
        android:layout_width="100dp"
        android:text="REGISTER"
        android:id="@+id/register2"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:layout_below="@id/expandableTextView2"
        android:layout_alignParentRight="true"
        android:backgroundTint="#A65A68C7"
        android:layout_margin="8dp"
        android:layout_height="32dp"/>


    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandableTextView3"
        android:layout_below="@id/register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:maxLines="1"
        android:background="@drawable/shape2"
        android:backgroundTint="#609D8BD6"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:ellipsize="end"
        app:animation_duration="750"/>
    <Button
        android:layout_width="100dp"
        android:text="REGISTER"
        android:id="@+id/register3"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:layout_below="@id/expandableTextView3"
        android:layout_alignParentRight="true"
        android:backgroundTint="#A65A68C7"
        android:layout_margin="8dp"
        android:layout_height="32dp"/>

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandableTextView4"
        android:layout_below="@id/register3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:maxLines="1"
        android:background="@drawable/shape2"
        android:backgroundTint="#609D8BD6"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:ellipsize="end"
        app:animation_duration="750"/>
    <Button
        android:layout_width="100dp"
        android:text="REGISTER"
        android:id="@+id/register4"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:layout_below="@id/expandableTextView4"
        android:layout_alignParentRight="true"
        android:backgroundTint="#A65A68C7"
        android:layout_margin="8dp"
        android:layout_height="32dp"/>
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            app:headerLayout="@layout/header"
            android:id="@+id/nav"
            android:background="@color/colorPrimary2"

            android:layout_height="match_parent"
            app:itemTextColor="@android:color/white"
            app:itemIconTint="@android:color/white"
            app:menu="@menu/menu"
            /></RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>