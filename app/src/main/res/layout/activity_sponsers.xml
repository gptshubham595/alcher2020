<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/blur"
    android:layout_height="match_parent"
    tools:context=".Sponsers">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/pepsi"
                app:cardBackgroundColor="#06164D"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="180dp"
                        android:src="@drawable/blur"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/pepsilogo"
                        android:layout_height="180dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/pepsilogo"
                        android:text="PEPSI"
                        android:id="@+id/pepsiname"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/mi"
                android:layout_below="@id/pepsi"
                app:cardBackgroundColor="#06164D"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="180dp"
                        android:src="@drawable/blur"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/milogo"
                        android:layout_height="180dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/milogo"
                        android:text="MI"
                        android:id="@+id/miname"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/snapdeal"
                android:layout_below="@id/mi"
                app:cardBackgroundColor="#06164D"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="180dp"
                        android:src="@drawable/blur"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/snapdeallogo"
                        android:layout_height="180dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/snapdeallogo"
                        android:text="SNAPDEAL"
                        android:id="@+id/snapdealname"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            app:headerLayout="@layout/header"
            android:id="@+id/nav"
            android:background="@color/colorPrimary2"

            android:layout_height="match_parent"
            app:itemTextColor="@android:color/white"
            app:itemIconTint="@android:color/white"
            app:menu="@menu/menu"
            /></RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
