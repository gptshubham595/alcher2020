<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">
    <TextView
        android:layout_width="match_parent"
        android:text="Our Team"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/contact1"
        android:textSize="20sp"
        android:layout_height="64dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Contact Us"
        android:textColor="@color/white"
        android:gravity="left"
        android:layout_margin="12dp"
        android:layout_below="@id/contact1"
        android:id="@+id/contact"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/contact"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/hemant"
            android:layout_height="140dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:src="@drawable/hemant"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_corner_radius_bottom_left="12dp"
                    app:riv_corner_radius_bottom_right="12dp"
                    app:riv_corner_radius_top_left="12dp"
                    app:riv_corner_radius_top_right="12dp"
                    android:layout_width="130dp"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Hemant Yadav"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#A6DCDBE2"
                android:text="PR Head"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="48dp"
                            android:src="@color/colorAccent"
                            android:layout_height="48dp"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/phone"
                        android:layout_height="32dp"/>
                    </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="7663929177"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/shashank"
                android:layout_height="140dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:src="@drawable/shashank"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="30dip"
                        app:riv_border_width="2dip"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        app:riv_corner_radius_bottom_left="12dp"
                        app:riv_corner_radius_bottom_right="12dp"
                        app:riv_corner_radius_top_left="12dp"
                        app:riv_corner_radius_top_right="12dp"
                        android:layout_width="130dp"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="Shashank Sharma"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#A6DCDBE2"
                        android:text="PR Head"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="48dp"
                                android:src="@color/colorAccent"
                                android:layout_height="48dp"/>
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/phone"
                                android:layout_height="32dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:text="7896658640"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/kartikey"
                android:layout_height="140dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:src="@drawable/kartikey"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="30dip"
                        app:riv_border_width="2dip"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        app:riv_corner_radius_bottom_left="12dp"
                        app:riv_corner_radius_bottom_right="12dp"
                        app:riv_corner_radius_top_left="12dp"
                        app:riv_corner_radius_top_right="12dp"
                        android:layout_width="130dp"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="Kartikey Sharma"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#A6DCDBE2"
                        android:text="Branding Head"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="48dp"
                                android:src="@color/colorAccent"
                                android:layout_height="48dp"/>
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/phone"
                                android:layout_height="32dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:text="7578062409"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </ScrollView>

</RelativeLayout>