<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".ContactUs">
    <TextView
        android:layout_width="match_parent"
        android:text="Contact Us"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/contact"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/contact"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#B0FFFFFF"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/hemant"
            android:gravity="center"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_margin="5dp"
                android:layout_height="90dp"
                android:src="@drawable/hemant"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Hemant Yadav"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/colorAccent"
                android:text="7663929177"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"

            app:cardBackgroundColor="#B0FFFFFF"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/shashank"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="90dp"
                    android:src="@drawable/shashank"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Shashank Sharma"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="7896658640"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#B0FFFFFF"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/kartikey"
                android:gravity="center"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="90dp"
                    android:src="@drawable/kartikey"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Kartikey Sharma"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    android:text="7578062409"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </ScrollView>

</RelativeLayout>